doctype html
html
  block link
    -var selected = 'home'
  
  -var menu = { 'home': '/', 'controlpanel': '/controlpanel'};
  head
    title= title
    link(rel='stylesheet', href='/less-css/reset.css')
    link(rel='stylesheet', href='/less-css/basic.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans')
  body
    .header
      a(href="/") #{title}
      ul.nav
        each val, key in menu
          li
            if selected === key
              a.active(href=val)= key
            else
              a(href=val)= key
    block content
